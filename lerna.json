{
  "packages": ["packages/*", "playground"],
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "*.json",
        "packages/__@(tests|mocks|fixtures)__/**"
      ],
      "message": "chore(release): publish"
    }
  },
  "version": "independent",
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"]
}
